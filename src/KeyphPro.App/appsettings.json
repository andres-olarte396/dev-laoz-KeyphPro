{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=KeyphPro.db",
    "QueryConnection": "Data Source=C:\\sqlite\\data\\KeyphPro.db",
    "CommandConnection": "Data Source=C:\\sqlite\\data\\KeyphPro.db"
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "your-very-secure-secret-key",
    "Issuer": "your-app-name",
    "Audience": "your-app-name"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=localhost;Database=StoreLog;Trusted_Connection=True;Integrated Security=True;TrustServerCertificate=True;",
          "tableName": "Logs",
          "autoCreateTable": true
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}

